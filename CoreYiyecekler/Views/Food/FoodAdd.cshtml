@model CoreYiyecekler.Data.Models.AddItem


@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<h1>FoodS Add Page</h1>

<h1>CategoryAdd</h1>
<br />


@*enctype="multipart/form-data" resim seçildiğinde datanın boş dönmemesi için*@

<form class="form-group" action="FoodAdd" asp-controller="Food" method="post" enctype="multipart/form-data"> 
    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.FoodName, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />  
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Choose Image")
    @*@Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })*@
    <input type="file" name="ImageURL"/> 
    <br /> 
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dropDownValues, new { @class = "form-control" })
    <br/>
@*    @Html.Label("Description")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />*@
    <button class="btn btn-primary">Save</button>
</form>