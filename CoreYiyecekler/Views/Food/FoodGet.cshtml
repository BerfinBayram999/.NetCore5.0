@model CoreYiyecekler.Data.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>FoodGet</h1>
<br />
@using (Html.BeginForm("FoodUpdate", "Food", FormMethod.Post))
{

     
    @Html.Label("FoodId")
    @Html.TextBoxFor(x => x.FoodId, new { @class = "form-control" })
     <br />  
    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.FoodName, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />  
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Image Url")
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <br /> 
    @Html.Label("Category")
      @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
 @*   @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dropDownValues, new { @class = "form-control" })
    <br/>*@
