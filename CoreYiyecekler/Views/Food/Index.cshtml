@model List<CoreYiyecekler.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Food List</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Food Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    <tr />
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FoodId</td>
            <td>@x.FoodName</td>
            <th>@x.Price</th>
            <th>@x.Stock</th>
            <td>@x.Category.CategoryName</td>
            <td><a href="/Food/DeleteFood/@x.FoodId" class="btn btn-danger">Delete</a></td>
            <td><a href="#" class="btn btn-info">Update</a></td>
            <td><a href="#" class="btn btn-warning">Details</a></td>
        </tr>

    }

</table>

<a href="/Food/FoodAdd" class="btn btn-info">New Food</a>





